<div style="align-items: center;">
    <h2>Reservation</h2>
    <form class="reserve-form" >
        <div class="form-group">
            {{#if schedules}}
            <h3>Select One Time Slot</h3>
            <ul>
                {{#each schedules as |schedule|}}
                {{> schedule-details}}
                {{/each}}
            </ul>
        </div>
        <div class="form-group" >
            <label for="first-name">First Name:</label>
            <input style="display:block"  class="form-input" type="text" id="first-name"/>
        </div>
        <div class="form-group">
            <label for="last-name">Last Name:</label>
            <input style="display:block"class="form-input" type="text" id="last-name"/>
        </div>
        <div class="form-group">
            <label for="pet-name">Pet Name:</label>
            <input style="display:block" class="form-input" type="text" id="pet-name"/>
        </div>
        <div class="form-group">
            <label for="phone-input">Phone Number:</label>
            <input style="display:block" class="form-input" type="text" id="phone-input"/>
        </div>
        <div class="form-group">
            <label for="notes-input">Notes:</label>
            <input style="display:block" class="form-input" type="text" id="notes-input"/>
        </div>
        <div>
            <button style="margin-top: 10px"class="btn btn-primary" type="submit" id="reserve-btn">Reserve Appointment</button>
        </div>
        {{else}}
        <h4>Sorry! No appointments available, please try again later</h4>
        {{/if}}
    

</div>
<script src="./js/reserve.js"></script>
